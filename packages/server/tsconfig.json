{
    "compilerOptions": {
        "target": "ES2022",
        "outDir": "dist",
        "declaration": true,
        "moduleResolution": "NodeNext",
        "module": "NodeNext",
        "allowSyntheticDefaultImports": true,
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "experimentalDecorators": true,
        "useDefineForClassFields": false
    },
    "include": ["./src/**/*.ts"]
}